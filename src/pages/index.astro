---
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="Home">
    <section class="hero">
        <div class="hero-content">
            <h1>Welcome to The Missing Semester</h1>
            <p>Equipping CS freshmen with essential skills beyond the curriculum.</p>
            <a href={import.meta.env.BASE_URL + "/about"} class="cta-button">Learn More</a>
        </div>
    </section>

    <section class="main-content">
        <h2>What We Offer</h2>
        <p>Our program covers crucial topics often overlooked in traditional CS education, including:</p>
        <ul>
            <li>Version Control with Git</li>
            <li>Command Line Proficiency</li>
            <li>Debugging Techniques</li>
            <li>Productivity Tools and Workflows</li>
        </ul>
    </section>
</MainLayout>

<style>
    .hero {
        background-color: var(--accent-color);
        color: white;
        padding: 4rem 2rem;
        text-align: center;
    }

    .hero-content {
        max-width: 800px;
        margin: 0 auto;
    }

    .hero h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .hero p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .cta-button {
        display: inline-block;
        background-color: white;
        color: var(--accent-color);
        padding: 0.8rem 1.5rem;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .cta-button:hover {
        background-color: var(--text-color);
        color: white;
        text-decoration: none;
    }

    .main-content {
        max-width: 800px;
        margin: 2rem auto;
        padding: 0 1rem;
    }
</style>
